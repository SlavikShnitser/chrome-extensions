{
	"manifest_version": 2,
	"name": "Bitcoin extension",
	"version": "0.1",

	"icons": {
		"16": "assets/icon.png",
		"48": "assets/icon.png",
		"128": "assets/icon.png"
	},

	"web_accessible_resources": [
		"assets/icon.png"
	],

	"permissions": [
		"activeTab"
	],

	"background": {
		"scripts": [
			"js/background.js"
		],
		"persistent": true
	},

	"content_scripts": [{
		"matches": ["https://bitcoin.org/*"],
		"js": ["js/content.js"],
		"css": ["css/content.css"]
	}]
}